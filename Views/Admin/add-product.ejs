<body>
    <%- include('../Includes/navigation.ejs') %>
   <div class="container">
      <h1>Add New Product</h1>  
<form class="bodyform" method="POST" action="/postValue" enctype="multipart/form-data"> 
     

<div class="mb-3">
      <label for="productimmage" class="form-label">Product Image:-</label>
      <input type="file" class="form-control" name="productimmage" placeholder="Your Product Image..." required>
</div>
<div class="mb-3">
      <label for="productname" class="form-label">Product Name:-</label>
      <input type="text" class="form-control" name="productname" placeholder="Enter Your Product Name..." required>
</div>
<div class="mb-3">
      <label for="productprice" class="form-label">Product Price:-</label>
      <input type="number" class="form-control" name="productprice" placeholder="Enter Your Product Price..." required>
</div>
<div class="mb-3">
        <label for="productdescription" class="form-label">Product Description:-</label>
        <textarea class="form-control" name="productdescription" placeholder="Enter Your Product Description..." rows="3" required></textarea>
</div>
<div class="mb-3">
     
      <input type="hidden" class="form-control" name="_csrf" value="<%=csrfToken%>">
</div>


    <button type="submit" class="btn btn-primary">Submit</button>

  </form>


    </div>
   

